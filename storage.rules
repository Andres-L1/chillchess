rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // DEFAULT DENY
    // ============================================
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // ============================================
    // ALBUMS & TRACKS
    // ============================================
    match /albums/{artistId}/{allPaths=**} {
      // Public read so everyone can listen/see covers
      allow read: if true;
      
      // Write access:
      // 1. Admins (custom claim or explicit list would be better, but we rely on Auth for now)
      // 2. The artist themselves (must be authenticated and own the folder)
      allow write: if request.auth != null 
                   && (request.auth.uid == artistId || firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    
    // ============================================
    // MUSIC SUBMISSIONS
    // ============================================
    // Path structure used in code: submissions/{userId}/{timestamp}/{filename}
    match /submissions/{userId}/{allPaths=**} {
       // ... existing rules ...
       allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 50 * 1024 * 1024;
       allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
